<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layout_restaurant"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/row_restaurant_height"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/row_linear1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/prop_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_row_text"
            android:text="test"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/prop_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_row_text"
            android:maxLines="2"
            android:text="test"/>

        <TextView
            android:id="@+id/prop_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_row_text"
            android:text="test"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/prop_image"
        android:layout_width="@dimen/row_restaurant_height"
        android:layout_height="@dimen/row_restaurant_height"
        android:scaleType="centerCrop"
        android:layout_alignParentEnd="true"
        />
</RelativeLayout>